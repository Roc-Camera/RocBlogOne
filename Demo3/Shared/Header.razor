<header>
    <div class="menu navbar-right">
        <Menu Mode=MenuMode.Horizontal Style="@themeColor">
            <MenuItem Key="mail" Style="font-size:18px">
                <Icon Type="home" Theme="outline"></Icon>
                <NavLink href="/">首页</NavLink>
            </MenuItem>
            <SubMenu TitleTemplate=@sub1Title1>
                <SubMenu Title="地图标记" Style="font-size:16px">
                    <MenuItem Key="setting1:1">中国制霸</MenuItem>
                    <MenuItem Key="setting1:2">全球制霸</MenuItem>
                </SubMenu>
                <MenuItemGroup Title="生成器" Style="font-size:16px">
                    <MenuItem Key="setting:2">卢浮宫生成器</MenuItem>
                    <MenuItem Key="setting:3">福音战士标题生成器</MenuItem>
                    <MenuItem Key="setting:4">梗图生成器</MenuItem>
                    <MenuItem Key="setting:5">字符字生成器</MenuItem>
                </MenuItemGroup>
                <MenuItemGroup Title="其他" Style="font-size:16px">
                    <MenuItem Key="setting:6">蒸 気 機</MenuItem>
                    <MenuItem Key="setting:7">Sakana! 石蒜模拟器</MenuItem>
                    <MenuItem Key="setting:8">EVANGELION & 扫雷</MenuItem>
                    <MenuItem Key="setting:9">图像切割粘贴器</MenuItem>
                </MenuItemGroup>
                <MenuDivider />
            </SubMenu>

            <SubMenu TitleTemplate=@sub1Title2>
                <MenuItemGroup>
                    <MenuItem Key="setting:1" RouterLink="/gobang" Style="font-size:16px">五子棋</MenuItem>
                    <MenuItem Key="setting:2" RouterLink="/2048" Style="font-size:16px">2048</MenuItem>
                    <MenuItem Key="setting:3"><a href="https://support.qq.com/product/440024" target="_blank" Style="font-size:16px">留言板</a></MenuItem>
                    <MenuItem Key="setting:4" RouterLink="/friendlinks" Style="font-size:16px">友情链接</MenuItem>
                </MenuItemGroup>
            </SubMenu>
        </Menu>
    </div>

    <div style="display:flex;align-items: center;top: 1em;right: 1em;position: absolute;">
        @if (currentTheme == "Dark")
        {
            <svg class="icon" aria-hidden="true" style="width:18px;height:18px;">
                <use xlink:href="#icon-yueliang1"></use>
            </svg>
        }
        else
        {
            <svg class="icon" aria-hidden="true" style="width:24px;height:24px;">
                <use xlink:href="#icon-taiyang1"></use>
            </svg>
        }
        <Switch Checked="@(currentTheme == "Dark")" Size="small" CheckedChildren="夜" UnCheckedChildren="昼" OnChange="SwitchTheme" Style="margin-left:5px;" />
    </div>

</header>

@code
{
    RenderFragment sub1Title1 =
    @<MenuItem Style="font-size:18px">
        <Icon Type="smile" Theme="outline"></Icon>
        <NavLink href="funs">有趣的网站</NavLink>
    </MenuItem>;
    RenderFragment sub1Title2 =
    @<Template>
        <NavLink class="apps" href="apps" style="font-size:18px">App</NavLink>
    </Template>;
}